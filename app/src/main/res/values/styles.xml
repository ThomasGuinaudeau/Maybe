<resources>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="topButtons">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">#ff00ff</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AppTheme.TopButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?colorOnPrimary</item>
    </style>
</resources>