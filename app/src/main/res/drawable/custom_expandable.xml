<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:top="8dp"
                android:bottom="8dp"
                android:drawable="@drawable/round_expand_less_24">
            </item>
        </layer-list>
    </item>
    <item android:state_expanded="true" >
        <layer-list>
            <item
                android:top="8dp"
                android:bottom="8dp"
                android:drawable="@drawable/round_expand_more_24">
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:top="8dp"
                android:bottom="8dp"
                android:drawable="@drawable/round_expand_more_24">
            </item>
        </layer-list>
    </item>
</selector>