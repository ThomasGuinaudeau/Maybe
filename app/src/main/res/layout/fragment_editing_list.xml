<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/category_editing_list_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/category_editing_list_back"
            style="@style/AppTheme.TopButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_round_arrow_back_24" />

        <TextView
            android:id="@+id/category_editing_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Title"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/category_editing_list_delete"
            style="@style/AppTheme.TopButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_round_delete_forever_24" />

        <Button
            android:id="@+id/category_editing_list_visibility"
            style="@style/AppTheme.TopButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_round_visibility_24" />

        <Button
            android:id="@+id/category_editing_list_export"
            style="@style/AppTheme.TopButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_round_upload_24" />

        <Button
            android:id="@+id/category_editing_list_save"
            style="@style/AppTheme.TopButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_round_save_24" />

        <Button
            android:id="@+id/category_editing_list_play"
            style="@style/AppTheme.TopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_round_play_arrow_24" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editing_lists_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_editing_list_buttons_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>